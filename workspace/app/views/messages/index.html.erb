<div class="main">
    
        <%@messages.each do |t|%>
        <div class="cWrap">
        <div class="col s12 m6">
        <div class="card blue-grey darken-1">
        <div class="card-content white-text">
        <%if current_user.admin?%>
        <span class="card-title"><%=link_to t.subject, show_path(t)%></span>
        <%else%>
        <span class="card-title"><%=t.subject%></span>
        <%end%>
        <div class="divider"></div>
        <p><%=t.content%></p>
        <p>Posted By: <%=t.posted_by%></p>
        </div>
            <div class="card-action">
            <%if current_user.admin?%> <%=link_to "Delete Message", delete_path(t), :method => 'delete'%> <%end%>
    
            </div>
          
        </div>
        </div>
    </div>
    <% end %>
</div>
